}
.links{
    color: rgb(99, 39, 39);
    text-decoration: none;
    margin: 5 15px;
    padding: 16px;
    font-size: 30px
    
}
.linksi{
    color: rgb(255, 255, 255);
    text-decoration: none;
    margin: 5 20px;
    border: 2px solid rgba(58, 8, 92, 0.911);
    background-color: rgb(93, 13, 109);
    padding: 16px;
    border-radius: 90px;
    font-size: 30px;
    transition: 0.5s;
    
}
.linksi:hover{
    border: 2px solid rgba(174, 76, 231, 0.671);
    background-color: rgb(255, 255, 255);
    color: rgb(93, 13, 109);
}
